<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.blctek.carserver.mapper.CarMapper">
    <select id="selectAllCarAndDriver" resultMap="CarMap">
        SELECT
            *
        FROM
            car c,
            driver d
        WHERE
            c.driverId=d.driverId
    </select>
    <resultMap id="CarMap" type="com.blctek.carserver.pojo.Car">
        <id column="carId" property="carId"/>
        <result column="type" property="type"/>
        <result column="chipId" property="carId"/>
        <result column="driverId" property="driverId"/>
        <result property="imagePath" column="imagePath"/>
        <association property="driver" javaType="com.blctek.carserver.pojo.Driver">
            <id column="driverId" property="driverId"/>
            <result column="driverName" property="driverName"/>
            <result column="driverPhone" property="driverPhone"/>
        </association>
    </resultMap>
    <insert id="insertCar" parameterType="com.blctek.carserver.pojo.Car"
            keyProperty="carId" useGeneratedKeys="true">
        INSERT INTO
            car
            (type,driverId,chipId,imagePath)
        VALUES
            (#{type},#{driverId},#{chipId},#{imagePath})
    </insert>
    <update id="updateCar" parameterType="com.blctek.carserver.pojo.Car">
        UPDATE
            car
        <trim prefix="set" suffixOverrides=",">
            <if test=" type!=null and type!='' ">
                type=#{type},
            </if>
            <if test=" driverId!=null and driverId!='' ">
                driverId=#{driverId},
            </if>
            <if test=" chipId!=null and chipId!='' ">
                chipId=#{chipId},
            </if>
            <if test=" imagePath!=null and imagePath!='' ">
                imagePath=#{imagePath},
            </if>
        </trim>
        WHERE
            carId=#{carId}
    </update>
    <delete id="deleteCar" parameterType="integer">
        DELETE FROM car WHERE carId=#{carId}
    </delete>
</mapper>