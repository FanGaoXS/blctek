<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blctek.engineserver.mapper.EngineerMapper">
    <!--select的条件sql（全有）-->
    <sql id="selectCondition">
        <if test=" id!=null and id!='' ">
            AND id = #{id}
        </if>
        <if test=" uuid!=null and uuid!='' ">
            AND uuid = #{uuid}
        </if>
        <if test=" type!=null and type!='' ">
            AND type = #{type}
        </if>
        <if test=" deviceId!=null and deviceId!='' ">
            AND deviceId = #{deviceId}
        </if>
        <if test=" driverId!=null and driverId!='' ">
            AND driverId = #{driverId}
        </if>
        <if test=" inputTime!=null and inputTime!='' ">
            AND inputTime = #{inputTime}
        </if>
        <if test=" modelId!=null and modelId!='' ">
            AND modelId = #{modelId}
        </if>
        <if test=" vehicleNumber!=null and vehicleNumber!='' ">
            AND vehicleNumber = #{vehicleNumber}
        </if>
        <if test=" plateType!=null and plateType!='' ">
            AND plateType = #{plateType}
        </if>
        <if test=" machineNumber!=null and machineNumber!='' ">
            AND machineNumber = #{machineNumber}
        </if>
        <if test=" engineNumber!=null and engineNumber!='' ">
            AND engineNumber = #{engineNumber}
        </if>
    </sql>
    <!--update的条件sql（除了自增主键id）-->
    <sql id="updateCondition">
        <if test=" uuid!=null and uuid!='' ">
            uuid = #{uuid},
        </if>
        <if test=" type!=null and type!='' ">
            type = #{type},
        </if>
        <if test=" deviceId!=null and deviceId!='' ">
            deviceId = #{deviceId},
        </if>
        <if test=" driverId!=null and driverId!='' ">
            driverId = #{driverId},
        </if>
        <if test=" inputTime!=null and inputTime!='' ">
            inputTime = #{inputTime},
        </if>
        <if test=" modelId!=null and modelId!='' ">
            modelId = #{modelId},
        </if>
        <if test=" vehicleNumber!=null and vehicleNumber!='' ">
            vehicleNumber = #{vehicleNumber},
        </if>
        <if test=" plateType!=null and plateType!='' ">
            plateType = #{plateType},
        </if>
        <if test=" machineNumber!=null and machineNumber!='' ">
            machineNumber = #{machineNumber},
        </if>
        <if test=" engineNumber!=null and engineNumber!='' ">
            engineNumber = #{engineNumber},
        </if>
    </sql>
    <!--分页的条件sql（当前页，每页记录数）-->
    <sql id="limitCondition">
        <if test=" currentPage!=null and currentPage!='' and pageSize!=null and pageSize!='' ">
            <bind name="startIndex" value="pageSize*(currentPage-1)"/>
            <bind name="endIndex" value="pageSize*currentPage"/>
            #{startIndex},#{endIndex}
        </if>
    </sql>
    <!--返回的结果集-->
    <resultMap id="EngineerMap" type="com.blctek.engineserver.pojo.Engineer">
        <id column="id" property="id"/>
        <result column="uuid" property="uuid"/>
        <result column="type" property="type"/>
        <result column="deviceId" property="deviceId"/>
        <result column="driverId" property="driverId"/>
        <result column="inputTime" property="inputTime"/>
        <result column="modelId" property="modelId"/>
        <result column="vehicleNumber" property="vehicleNumber"/>
        <result column="plateType" property="plateType"/>
        <result column="machineNumber" property="machineNumber"/>
        <result column="engineNumber" property="engineNumber"/>
        <!--<association property="driver" javaType="com.blctek.engineserver.pojo.Driver">
            <id column="id" property="id"/>
        </association>
        <association property="model" javaType="com.blctek.engineserver.pojo.Model">
            <id column="id" property="id"/>
        </association>-->
    </resultMap>
    <!--新增一条记录-->
    <insert id="insertOne"
            keyProperty="id"
            useGeneratedKeys="true"
            parameterType="com.blctek.engineserver.pojo.Engineer">
        INSERT INTO
            engineer
            (uuid,type,deviceId,driverId,inputTime,modelId,vehicleNumber,plateType,machineNumber,engineNumber)
        VALUES
            (#{uuid},#{type},#{deviceId},#{driverId},#{inputTime},#{modelId},#{vehicleNumber},#{plateType},#{machineNumber},#{engineNumber})
    </insert>
    <!--删除一条记录-->
    <delete id="deleteOne"
            parameterType="com.blctek.engineserver.pojo.Engineer">
        DELETE FROM
            engineer
        WHERE
            id = #{id}
    </delete>
    <!--修改一条记录（根据id主键）-->
    <update id="updateOne"
            parameterType="com.blctek.engineserver.pojo.Engineer">
        UPDATE
            engineer
        <trim prefix="SET" suffixOverrides=",">
            <include refid="updateCondition"></include>
        </trim>
        WHERE
            id = #{id}
    </update>
    <!--查询所有（可分页，可单条件，可多条件）-->
    <select id="selectList"
            parameterType="com.blctek.engineserver.pojo.Engineer"
            resultMap="EngineerMap">
        SELECT
            e.*,d.*,m.*
        FROM
            engineer e join driver d on e.driverId = d.id
            join model m on e.modelId = m.id
        <trim prefix="WHERE" prefixOverrides="AND">
            <include refid="selectCondition"></include>
        </trim>
        <trim prefix="LIMIT">
            <include refid="limitCondition"></include>
        </trim>
    </select>
    <!--查询一条（可单条件，可多条件）-->
    <select id="selectOne"
            parameterType="com.blctek.engineserver.pojo.Engineer"
            resultMap="EngineerMap">
        SELECT
            *
        FROM
            engineer
        <trim prefix="WHERE" prefixOverrides="AND">
            <include refid="selectCondition"></include>
        </trim>
    </select>
    <!--根据主键id（效率高）查询记录数（可单条件，可多条件）-->
    <select id="count"
            parameterType="com.blctek.engineserver.pojo.Engineer"
            resultType="long">
        SELECT
            count(id)
        FROM
            engineer
        <trim prefix="WHERE" prefixOverrides="AND">
            <include refid="selectCondition"></include>
        </trim>
    </select>
</mapper>